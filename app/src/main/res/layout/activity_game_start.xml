<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameStartActivity">

    <ImageButton
        android:id="@+id/cardButton4"
        android:layout_width="97dp"
        android:layout_height="136dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/peter_river"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/cardButton2"
        android:layout_width="97dp"
        android:layout_height="136dp"
        android:layout_marginEnd="40dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/cardButton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toEndOf="@+id/cardButton1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675"
        app:srcCompat="@drawable/peter_river"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/cardButton5"
        android:layout_width="97dp"
        android:layout_height="136dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toEndOf="@+id/cardButton4"
        app:srcCompat="@drawable/peter_river"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/cardButton3"
        android:layout_width="97dp"
        android:layout_height="136dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704"
        app:srcCompat="@drawable/peter_river"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="242dp"
        android:layout_height="175dp"
        android:layout_marginTop="40dp"
        android:autoSizeTextType="uniform"
        android:justificationMode="inter_word"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/cardButton1"
        android:layout_width="97dp"
        android:layout_height="136dp"
        android:layout_marginStart="40dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/cardButton4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675"
        app:srcCompat="@drawable/peter_river"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>